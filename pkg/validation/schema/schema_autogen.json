{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/openmfp/extension-manager-operator/pkg/validation/content-configuration",
  "$ref": "#/$defs/ContentConfiguration",
  "$defs": {
    "Category": {
      "properties": {
        "label": {
          "type": "string"
        },
        "icon": {
          "type": "string"
        },
        "collapsible": {
          "type": "boolean"
        },
        "id": {
          "type": "string"
        },
        "isGroup": {
          "type": "boolean"
        },
        "collapsable": {
          "type": "boolean"
        },
        "dxpOrder": {
          "type": "integer"
        },
        "order": {
          "type": "integer"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "ClientPermissions": {
      "properties": {
        "urlParameters": {
          "$ref": "#/$defs/UrlParameters"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "Component": {
      "properties": {
        "annotations": {
          "additionalProperties": {
            "type": "string"
          },
          "type": "object"
        },
        "id": {
          "type": "string"
        },
        "type": {
          "$ref": "#/$defs/Type"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "ContentConfiguration": {
      "oneOf": [
        {
          "required": [
            "name"
          ],
          "title": "string"
        }
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "creationTimestamp": {
          "type": "string"
        },
        "luigiConfigFragment": {
          "$ref": "#/$defs/LuigiConfigFragment"
        },
        "url": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "luigiConfigFragment"
      ]
    },
    "DefineEntity": {
      "properties": {
        "id": {
          "type": "string"
        },
        "useBack": {
          "type": "boolean"
        },
        "contextKey": {
          "type": "string"
        },
        "dynamicFetchId": {
          "type": "string"
        },
        "label": {
          "type": "string"
        },
        "pluralLabel": {
          "type": "string"
        },
        "notFoundConfig": {
          "$ref": "#/$defs/NotFoundConfig"
        },
        "graphqlEntity": {
          "$ref": "#/$defs/GraphqlEntity"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "ExternalLink": {
      "properties": {
        "url": {
          "type": "string"
        },
        "sameWindow": {
          "type": "boolean"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "GraphqlEntity": {
      "properties": {
        "group": {
          "type": "string"
        },
        "kind": {
          "type": "string"
        },
        "query": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "LuigiConfigData": {
      "oneOf": [
        {
          "required": [
            "nodes"
          ],
          "title": "array"
        }
      ],
      "properties": {
        "nodeDefaults": {
          "$ref": "#/$defs/NodeDefaults"
        },
        "nodes": {
          "items": {
            "$ref": "#/$defs/Node"
          },
          "type": "array"
        },
        "texts": {
          "items": {
            "$ref": "#/$defs/Text"
          },
          "type": "array"
        },
        "targetAppConfig": {
          "$ref": "#/$defs/TargetAppConfig"
        },
        "viewGroup": {
          "$ref": "#/$defs/ViewGroup"
        },
        "userSettings": {
          "$ref": "#/$defs/UserSettings"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "LuigiConfigFragment": {
      "oneOf": [
        {
          "required": [
            "data"
          ],
          "title": "object"
        }
      ],
      "properties": {
        "data": {
          "$ref": "#/$defs/LuigiConfigData"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "NavHeader": {
      "properties": {
        "useTitleResolver": {
          "type": "boolean"
        },
        "label": {
          "type": "string"
        },
        "showUpLink": {
          "type": "boolean"
        },
        "icon": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "Node": {
      "properties": {
        "entityType": {
          "type": "string"
        },
        "pathSegment": {
          "type": "string"
        },
        "label": {
          "type": "string"
        },
        "icon": {
          "type": "string"
        },
        "category": {
          "anyOf": [
            {
              "$ref": "#/$defs/Category"
            },
            {
              "type": "string"
            }
          ]
        },
        "url": {
          "type": "string"
        },
        "hideFromNav": {
          "type": "boolean"
        },
        "visibleForFeatureToggles": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "virtualTree": {
          "type": "boolean"
        },
        "requiredIFramePermissions": {
          "anyOf": [
            {
              "type": "object"
            }
          ]
        },
        "compound": {
          "anyOf": [
            {
              "type": "object"
            }
          ]
        },
        "initialRoute": {
          "type": "string"
        },
        "layoutConfig": {
          "anyOf": [
            {
              "type": "object"
            }
          ]
        },
        "context": {
          "anyOf": [
            {
              "type": "object"
            }
          ]
        },
        "webcomponent": {
          "anyOf": [
            {
              "$ref": "#/$defs/Webcomponent"
            },
            {
              "type": "boolean"
            }
          ]
        },
        "loadingIndicator": {
          "anyOf": [
            {
              "type": "object"
            }
          ]
        },
        "defineEntity": {
          "$ref": "#/$defs/DefineEntity"
        },
        "keepSelectedForChildren": {
          "type": "boolean"
        },
        "children": {
          "items": {
            "$ref": "#/$defs/Node"
          },
          "type": "array"
        },
        "urlSuffix": {
          "type": "string"
        },
        "hideSideNav": {
          "type": "boolean"
        },
        "tabNav": {
          "type": "boolean"
        },
        "showBreadcrumbs": {
          "type": "boolean"
        },
        "dxpOrder": {
          "type": "number"
        },
        "order": {
          "type": "number"
        },
        "testId": {
          "type": "string"
        },
        "navSlot": {
          "type": "string"
        },
        "visibleForPlugin": {
          "type": "boolean"
        },
        "isolateView": {
          "type": "boolean"
        },
        "visibleForContext": {
          "type": "string"
        },
        "visibleForEntityContext": {
          "$ref": "#/$defs/VisibleForEntityContext"
        },
        "networkVisibility": {
          "type": "string"
        },
        "clientPermissions": {
          "$ref": "#/$defs/ClientPermissions"
        },
        "navigationContext": {
          "type": "string"
        },
        "navHeader": {
          "$ref": "#/$defs/NavHeader"
        },
        "titleResolver": {
          "$ref": "#/$defs/TitleResolver"
        },
        "defineSlot": {
          "type": "string"
        },
        "ignoreInDocumentTitle": {
          "type": "boolean"
        },
        "externalLink": {
          "$ref": "#/$defs/ExternalLink"
        },
        "link": {
          "type": "string"
        },
        "viewGroup": {
          "type": "string"
        },
        "configurationMissing": {
          "type": "string"
        },
        "configurationHint": {
          "type": "string"
        },
        "configurationLink": {
          "type": "string"
        },
        "id": {
          "type": "string"
        },
        "hideGlobalSearch": {
          "type": "boolean"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "NodeDefaults": {
      "properties": {
        "entityType": {
          "type": "string"
        },
        "isolateView": {
          "type": "boolean"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "NotFoundConfig": {
      "properties": {
        "entityListNavigationContext": {
          "type": "string"
        },
        "sapIllusSVG": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "Project": {
      "properties": {
        "policies": {
          "items": {
            "type": "string"
          },
          "type": "array"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "Request": {
      "properties": {
        "method": {
          "type": "string"
        },
        "url": {
          "type": "string"
        },
        "headers": {
          "additionalProperties": {
            "type": "string"
          },
          "type": "object"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "RequiredIFramePermissions": {
      "properties": {
        "allow": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "sandbox": {
          "items": {
            "type": "string"
          },
          "type": "array"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "SapIntegration": {
      "properties": {
        "navMode": {
          "type": "string"
        },
        "urlTemplateId": {
          "type": "string"
        },
        "urlTemplateParams": {
          "$ref": "#/$defs/UrlTemplateParams"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "Setting": {
      "properties": {
        "type": {
          "type": "string"
        },
        "label": {
          "type": "string"
        },
        "style": {
          "type": "string"
        },
        "isEditable": {
          "type": "boolean"
        },
        "options": {
          "items": {
            "type": "string"
          },
          "type": "array"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "TargetAppConfig": {
      "properties": {
        "_version": {
          "type": "string"
        },
        "sap.integration": {
          "$ref": "#/$defs/SapIntegration"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "Text": {
      "properties": {
        "locale": {
          "type": "string"
        },
        "textDictionary": {
          "additionalProperties": {
            "type": "string"
          },
          "type": "object"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "textDictionary"
      ]
    },
    "TitleResolver": {
      "properties": {
        "request": {
          "$ref": "#/$defs/Request"
        },
        "titlePropertyChain": {
          "type": "string"
        },
        "prerenderFallback": {
          "type": "boolean"
        },
        "fallbackTitle": {
          "type": "string"
        },
        "fallbackIcon": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "Type": {
      "properties": {
        "name": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "Url": {
      "properties": {
        "read": {
          "type": "boolean"
        },
        "write": {
          "type": "boolean"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "UrlParameters": {
      "properties": {
        "url": {
          "$ref": "#/$defs/Url"
        },
        "q": {
          "$ref": "#/$defs/Url"
        },
        "author": {
          "$ref": "#/$defs/Url"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "UrlTemplateParams": {
      "properties": {
        "query": true
      },
      "additionalProperties": false,
      "type": "object"
    },
    "UserGroupsSetting": {
      "properties": {
        "label": {
          "type": "string"
        },
        "sublabel": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "icon": {
          "type": "string"
        },
        "viewUrl": {
          "type": "string"
        },
        "initials": {
          "type": "string"
        },
        "settings": {
          "additionalProperties": {
            "$ref": "#/$defs/Setting"
          },
          "type": "object"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "UserSettings": {
      "properties": {
        "groups": {
          "additionalProperties": {
            "$ref": "#/$defs/UserGroupsSetting"
          },
          "type": "object"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "ViewGroup": {
      "properties": {
        "preloadSuffix": {
          "type": "string"
        },
        "requiredIFramePermissions": {
          "$ref": "#/$defs/RequiredIFramePermissions"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "VisibleForEntityContext": {
      "properties": {
        "project": {
          "$ref": "#/$defs/Project"
        },
        "component": {
          "$ref": "#/$defs/Component"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "Webcomponent": {
      "properties": {
        "selfRegistered": {
          "type": "boolean"
        },
        "tagName": {
          "type": "string"
        },
        "type": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "type": "object"
    }
  }
}